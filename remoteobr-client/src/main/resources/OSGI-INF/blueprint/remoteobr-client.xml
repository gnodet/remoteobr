<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <cm:property-placeholder persistent-id="org.fusesource.remoteobr" />

    <service id="ActiveMQXBeanNamespaceHandler" interface="org.apache.felix.bundlerepository.RepositoryAdmin" ranking="-1">
        <bean class="org.fusesource.remoteobr.client.RepositoryAdminProxy">
            <argument value="${url}"/>
            <argument>
                <bean class="org.apache.felix.bundlerepository.impl.SystemRepositoryImpl">
                    <argument ref="blueprintBundleContext"/>
                    <argument ref="logger"/>
                </bean>
            </argument>
            <argument>
                <bean class="org.apache.felix.bundlerepository.impl.LocalRepositoryImpl">
                    <argument ref="blueprintBundleContext"/>
                    <argument ref="logger"/>
                </bean>
            </argument>
            <argument ref="logger"/>
        </bean>
    </service>

    <bean id="logger" class="org.apache.felix.utils.log.Logger">
        <argument ref="blueprintBundleContext"/>
    </bean>

</blueprint>
